                <%if(stages[store.stagecnt][i][0] == '-'){%>
                    <h4><%=stages[store.stagecnt][i]%></h4>
                <%}else{%>
                    <p><%=stages[store.stagecnt][i]%></p>
                <%}%>
                <br>
            <%}%>
        </div>
        <form action="/crop_health_prev" method="post"><button class="btn btn-success" type="submit" style="position: relative; left: 755px; top: -405px;"><< Prev</button></form>
        <form action="/crop_health" method="post"><button class="btn btn-success" type="submit" style="position: relative; left: 845px; top: -443px;">Next >></button></form>
    </div>
</div>

