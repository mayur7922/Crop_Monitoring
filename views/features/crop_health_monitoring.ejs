<div class="crop_health_monitoring">
    <div class="vertical_navbar">
        <div class="avn"><a href="/crop_health_monitoring" class="anv">Monitor</a></div>
        <div class="avn"><a href="/weather_conditions" class="anv">Weather</a></div>
        <div class="cvn"><a href="/track_soil" class="anv">Soil Track</a></div>
        <div class="dvn"><a href="/dashboard" class="anv">Dashboard</a></div>
    </div>
    <div class="crop_health_monitoring_info">
        <h3 style="font-size: 20px; margin-bottom: 20px;">Selected Crop: <%=store.crop%></h3>
        <h3 style="font-size: 20px; margin-bottom: 20px; position: relative; top: -58px; left: 750px; display: inline-block;">Start date: <%=store.date%></h3>
        <div style="height: 400px;">
            <h2>Stage : <%=store.stagecnt + 1%> <%=stages[store.stagecnt][0]%></h2><br>
