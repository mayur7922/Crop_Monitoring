<%-include("../header.ejs")%>

<div>
    <div class="vertical_navbar">
        <div class="avn"><a href="/crop_health_monitoring" class="anv">Monitor</a></div>
        <div class="avn"><a href="/weather_conditions" class="anv">Weather</a></div>
        <div class="cvn"><a href="/track_soil" class="anv">Soil Track</a></div>
        <div class="dvn"><a href="/dashboard" class="anv">Dashboard</a></div>
    </div>
    <div class="weather-results">
        <h3 style="margin-bottom: 20px; font-family: 'Times New Roman', Times, serif;">Weather conditions at <%=result.city.name%></h3>
        <%var day = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"]%>
        <%var cnt = new Date().getDay();%>
        <%result.list.forEach(function(i){%>
            <div class="weather-content">
                <p style="margin: 0 0 30px 0; font-family: 'Times New Roman', Times, serif;"><%=day[cnt]%></p>
                <%cnt = cnt - 1;%>
                <%if(cnt == -1){cnt = 6}%>
                <p style="margin: 0 0 15px; font-family: 'Times New Roman', Times, serif;">Current temperature : <%=parseInt(i.main.temp - 273)%> deg C</p>
                <p style="margin: 0 0 15px; font-family: 'Times New Roman', Times, serif;">Climate : <%=i.weather[0].description%></p>
                <p style="margin: 0 0 15px; font-family: 'Times New Roman', Times, serif;">Min temperature : <%=parseInt(i.main.temp_min - 273)%> deg C</p>
                <p style="margin: 0 0 15px; font-family: 'Times New Roman', Times, serif;">Max temperature : <%=parseInt(i.main.temp_max - 273)%> deg C</p>
                <p style="margin: 0 0 15px; font-family: 'Times New Roman', Times, serif;">Humidity : <%=parseInt(i.main.humidity)%></p>
            </div>
        <%})%>
    </div>
</div>

<%-include("../footer.ejs")%>